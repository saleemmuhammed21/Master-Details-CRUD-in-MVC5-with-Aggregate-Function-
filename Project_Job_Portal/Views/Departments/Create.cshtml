@model Project_Job_Portal.Models.Department
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-12">
        <div id="msg">

        </div>
        @using (Ajax.BeginForm("Create", "Departments", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "msg", OnSuccess = "onSuccess" }, new { id = "frm" }))
        {
            <h3>Add New Department</h3>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.DepartmentName, new { @class = "col-form-label col-2 text-end" })
                <div class="col-4">
                    @Html.EnumDropDownListFor(x => x.DepartmentName, new { @class = "form-select" })
                    @Html.ValidationMessageFor(x => x.DepartmentName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        }
    </div>
    <div class="col-12">
        @Html.ActionLink("Return to Department list", "Index")
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        function onSuccess() {
            $("#frm").trigger("reset");
        }
    </script>
}

