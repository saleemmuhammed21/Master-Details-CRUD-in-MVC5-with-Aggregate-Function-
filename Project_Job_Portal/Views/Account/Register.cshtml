@model Project_Job_Portal.ViewModels.RegisterModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-12">
        @using (Html.BeginForm())
        {
            <h2>Register</h2>
            @Html.ValidationSummary()
            <div class="form-group row mb-1">
                <label class="col-form-label col-2 text-end">Usename</label>
                <div class="col-4">
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                <label class="col-form-label col-2 text-end">Password</label>
                <div class="col-4">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                <label class="col-form-label col-2 text-end">Confirm Password</label>
                <div class="col-4">
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
        }
    </div>
</div>
