@model Project_Job_Portal.ViewModels.LoginModel
@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-12">
        @using (Html.BeginForm())
        {
            <h2>Login</h2>
            @Html.ValidationSummary()
            <div class="form-group row mb-1">
                <label class="col-form-label col-2 text-end">Usename</label>
                <div class="col-4">
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                <label class="col-form-label col-2 text-end">Password</label>
                <div class="col-4">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-1">

                <div class="col-6">
                    <div class="d-flex justify-content-between">
                        <div>If you are not registered, @Html.ActionLink("Register here", "Register", "Account")</div> <button type="submit" class="btn btn-primary">Login</button>
                    </div>

                </div>
            </div>
        }
    </div>
</div>

