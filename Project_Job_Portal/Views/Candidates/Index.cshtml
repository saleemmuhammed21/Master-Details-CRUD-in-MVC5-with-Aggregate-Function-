@model IEnumerable<Project_Job_Portal.Models.Candidate>
@{
    ViewBag.Title = "Index";
}
<h3>Candidate List</h3>
<div class="row">
    <div class="col-12">

        <div class="d-flex justify-content-end mb-1">
            @Html.ActionLink("Create New", "Create", "Candidates", new { }, new { @class = "btn btn-primary btn-sm" })
        </div>
        <div class="spinner-border text-danger" role="status" id="spinner" style="display:none">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div id="table-div">
            @Html.Action("CandidateTable", "Candidates")
        </div>
    </div>

</div>
@section styles
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
@section scripts
{
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        $(document).on("click", "button.show", function () {
            var showBtn = $(this);
            var hideBtn = showBtn.next();
            var trSh = showBtn.closest("tr");
            var trSt = trSh.next();
            showBtn.hide();
            hideBtn.show();
            trSt.show();
        });
        $(document).on("click", "button.hide", function () {
            var hideBtn = $(this);
            var showBtn = hideBtn.prev();
            var trSh = showBtn.closest("tr");
            var trSt = trSh.next();
            showBtn.show();
            hideBtn.hide();
            trSt.hide();
        });
        $(document).on("click", "button.del", function () {
            var id = $(this).data("pk");
            var trP = $(this).closest('tr');
            var trS = trP.next();
            if (confirm("Are you sure to delete?\nCandidate with Qualifications will be deleted.")) {
                $.ajax({
                    url: "/Candidates/Delete/" + id,
                    method: "post",
                    dataType: "json",
                    success: r => {
                        if (r.success == true) {
                            trP.remove();
                            trS.remove();
                        }
                    }
                })
            }
        });
    </script>
}

